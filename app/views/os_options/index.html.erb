<p id="notice"><%= notice %></p>

<h1>Os Options</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Sleep</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @os_options.each do |os_option| %>
      <tr>
        <td><%= os_option.name %></td>
        <td><%= os_option.price %></td>
        <td><%= os_option.description %></td>
        <td><%= os_option.sleep %></td>
        <td><%= link_to 'Show', os_option %></td>
        <td><%= link_to 'Edit', edit_os_option_path(os_option) %></td>
        <td><%= link_to 'Destroy', os_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Os Option', new_os_option_path %>
